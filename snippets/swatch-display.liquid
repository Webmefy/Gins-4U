{%- liquid
  assign swatch_value = null
  if value.swatch.image
    assign image_url = value.swatch.image | image_url: width: 50
    assign swatch_value = 'background-image:url(' | append: image_url | append: ')'
    assign swatch_focal_point = value.swatch.image.presentation.focal_point
  elsif value.swatch.color
    assign swatch_value = 'background-color:rgb(' | append: value.swatch.color.rgb | append: ')'
  endif
-%}

{% if swatch_value != null %}
  <span class="filter-swatch-img-outer"><span class="filter-swatch-img"  style="{{ swatch_value }}; {% if swatch_focal_point %} --swatch-focal-point: {{ swatch_focal_point }};{% endif %}"></span></span>
{% endif %}
<span class="filter-swatch-text">{{ value.label | escape }} ({{ value.count }}) </span> 

